<h1>Listing reports</h1>

<% @reports.each_with_index do |report, index| %>
    <%= div_for report do %>
        <div class="number">
            #<%= index + 1 %>
        </div>
        <span>
            <%= link_to report.name, report %>
        </span>
        <div class="controls">
          <%= link_to "Edit", edit_report_path(report) %> | <%= link_to "Delete", report_path(report), :method => :delete, :confirm => "Are you positive?" %>
        </div>
    <% end %>
<% end %>

<div class="new">
  <%= link_to 'Add new report', new_report_path, :class => "new" %>
</div>
