<!DOCTYPE html>
<html>
<head>
  <title>Lays</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

    <div class="main">
       <% if signed_in? %>
         <div>You are currently logged in. <%= link_to "Log out.", logout_path %></div>
       <% end %>

       <% flash.each do |name, msg| %>
         <%= content_tag :div, msg, :id => "flash_#{name}" %>
       <% end %>

       <%= yield %>
     </div>
     
</body>
</html>
